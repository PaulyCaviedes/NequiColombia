<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Crear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/atras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:onClick="flecha"
                android:src="@drawable/atras" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Por favor ingresa tus datos"
                android:textColor="#11E5DB"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:digits="abcdefghijklmnñopqrsopqetuvwyxz ABCDEFGHIJKLMNÑOPQRSTUVWYXZ"
                android:fontFamily="@font/aleo"
                android:hint="Nombre:"
                android:textColor="@color/black"
                android:textColorHint="#939193" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/aleo"
                android:hint="Celular:"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="#939193" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:digits="abcdefghijklmnñopqrsopqetuvwyxz@.0123456789"
                android:fontFamily="@font/aleo"
                android:hint="Correo:"
                android:textColor="@color/black"
                android:textColorHint="#939193" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:digits="0123456789"
                android:fontFamily="@font/aleo"
                android:hint="PIN:"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/black"
                android:textColorHint="#939193" />

            <EditText
                android:id="@+id/et5"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:digits="0123456789"
                android:fontFamily="@font/aleo"
                android:hint=" Confirmar PIN:"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/black"
                android:textColorHint="#939193" />

            <Button
                android:id="@+id/bt1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/boton"
                android:fontFamily="@font/aleo"
                android:onClick="registrar"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>